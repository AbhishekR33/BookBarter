{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": false,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": []
  },
  "include": [
    "*.js",
    "models/**/*.js",
    "routes/**/*.js",
    "config/**/*.js",
    "controllers/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.js",
    "**/*.spec.js",
    "**/@types/**"
  ],
  "typeAcquisition": {
    "enable": false
  }
}
